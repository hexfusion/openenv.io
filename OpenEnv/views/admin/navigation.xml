<specification>
  <list name="nav-item" iterator="navigation_list">
    <param name="uri"/>
    <param name="type"/>
    <param name="scope"/>
    <param name="name"/>
    <param name="description"/>
    <param name="alias"/>
    <param name="priority"/>
    <param name="isactive" field="active" filter="boolean"/>
    <param name="edit" field="navigation_id" target="href" op="append"/>
    <param name="delete" field="navigation_id" target="href" op="append"/>
    <param name="create" field="navigation_id" target="data-parent"/>
    <param name="create-type" class="create" field="type" target="data-type"/>
    <param name="create-scope" class="create" field="scope" target="data-scope"/>
    <param name="navigation_id" class="parent" target="data-tt-id"/>
    <param name="parent_id" class="parent" target="data-tt-parent-id"/>
  </list>
</specification>
