<specification>
  <container name="no_responses" value="no_responses"/>
  <list name="section" iterator="survey.sections">
    <param name="title"/>
    <param name="description"/>
    <list name="question" iterator="questions">
      <param name="options_table" op="toggle" args="tree"/>
      <param name="is_simple" op="toggle" args="tree"/>
      <param name="is_grid" op="toggle" args="tree"/>
      <param name="title"/>
      <param name="has_description" op="toggle" args="tree" field="description"/>
      <param name="description"/>
      <list name="option" iterator="options">
        <param name="title"/>
        <param name="is_simple" op="toggle" args="tree"/>
        <param name="show_count1" op="toggle" args="tree"/>
        <param name="show_count2" op="toggle" args="tree"/>
        <param name="show_count3" op="toggle" args="tree"/>
        <param name="show_count4" op="toggle" args="tree"/>
        <param name="show_count5" op="toggle" args="tree"/>
        <param name="count1"/>
        <param name="count2"/>
        <param name="count3"/>
        <param name="count4"/>
        <param name="count5"/>
      </list>
      <param name="other-container" field="others" op="toggle" args="tree"/>
      <param name="other"/>
      <list name="other-response" iterator="others">
        <param name="response"/>
      </list>
    </list>
  </list>
</specification>
